{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Debug",
      "Microsoft": "Information"
    }
  },
  "EndpointConfiguration": {
    "Database": "PostgreSQL",
    "UseDatabaseAuth": true,
    "DatabaseConnection": "Server=localhost;Database=northwind;User Id={username};Password={password};Application Name=QuickAPI",
    "Swagger": {
      "Enabled": true,
      "Title": "Northwind QuickAPI Demo",
      "Version": "1.0.0"
    },
    "Endpoints": [
      {
        "Grouping": "Customers",
        "EndpointPath": "/api/customers/stats",
        "Sql": "SELECT COUNT(1) AS rec_count FROM customers"
      },
      {
        "Grouping": "Customers",
        "EndpointPath": "/api/customers",
        "Sql": "SELECT * FROM customers ORDER BY customer_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      },
      {
        "Grouping": "Customers",
        "EndpointPath": "/api/customers/{customerId}/orders",
        "Sql": "SELECT * FROM orders WHERE customer_id = @customerId ORDER BY order_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "customerId": {
            "Name": "@customerId",
            "Type": "String"
          },
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      },
      {
        "Grouping": "Products",
        "EndpointPath": "/api/products",
        "Sql": "SELECT * FROM products ORDER BY product_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      },
      {
        "Grouping": "Suppliers",
        "EndpointPath": "/api/suppliers",
        "Sql": "SELECT * FROM suppliers ORDER BY supplier_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      },
      {
        "Grouping": "Employees",
        "EndpointPath": "/api/employees",
        "Sql": "SELECT * FROM employees ORDER BY employee_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      },
      {
        "Grouping": "Employees",
        "EndpointPath": "/api/employees/{employeeId}/orders",
        "Sql": "SELECT * FROM orders WHERE employee_id = @employeeId ORDER BY order_id OFFSET @offset LIMIT @limit",
        "ParameterBindings": {
          "employeeId": {
            "Name": "@employeeId",
            "Type": "Int16"
          },
          "skip": {
            "Name": "@offset",
            "Type": "Int32",
            "DefaultValue": "0"
          },
          "limit": {
            "Name": "@limit",
            "Type": "Int32",
            "DefaultValue": "100"
          }
        }
      }
    ]
  }
}
